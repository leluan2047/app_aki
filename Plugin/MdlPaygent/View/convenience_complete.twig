{% block javascript %}
    
    <style type="text/css">        
		.conveni{
			font-family: Roboto, "游ゴシック", YuGothic, "Yu Gothic", "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN", Arial, "メイリオ", Meiryo, sans-serif;
	    	line-height: 1.4;
	    	font-size: 1.6rem;
	    	font-weight: normal;
		}    
		
		a:hover, a:active {
			text-decoration: underline;
			color: #FF8C00;
		}
    </style>
{% endblock %}

{% block main %}    
            <h2 class="title">ご注文完了</h2>  
			<p class ="conveni">
				<p> {% if arrOther is not null %}
					{% if arrOther.title.value %}
					<span style="color:red">■{{ arrOther.title.name }}情報</span><br>
					{% for key,item in arrOther %}
					{% if key != 'title' %}
					{% if item.name is not null %}{% if item.name !='' %}{{ item.name }}：{% endif %}{% endif %}{{ item.value }}<br>
					{% endif %}
					{% endfor %}
					{% endif %}
					{% endif %}
					<span style="font-weight:bold; font-size:16px">{{shop_name}}の商品をご購入いただき、ありがとうございました。</span>
				</p> 
				<hr style="background:#D3D3D3; border:0; height:1px">		
				<p>
					<span style="font-weight:bold; font-size:18px"> {{shop_name}} </span><br><br>
					TEL：{{tel}} <br>
					E-mail：<a href="#"> {{email}} </a> <br>
				</p> 
			</p>
{% endblock %}
